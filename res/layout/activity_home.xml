<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#152326"
    tools:context=".HomeActivity" >

	<TextView
	    android:id="@+id/txt_clients_tag"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#152326"
	    android:gravity="center"
	    android:text="@string/connections_tag"
	    android:textColor="#FFFFFF"
	    android:textSize="30sp" />
	   
	<ImageView
        android:id="@+id/img_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_help" />
	    
    <ListView
        android:id="@+id/list_possible_connections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_help"
        android:layout_below="@id/txt_clients_tag"
        android:layout_marginBottom="10dp"
        android:background="#255C69" >
    </ListView>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_toLeftOf="@id/img_help"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_edit_controller" />
    
    <ImageView
	    android:id="@+id/img_exit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:contentDescription="@null"
	    android:layout_toRightOf="@id/img_help"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="10dp"
	    android:layout_marginLeft="10dp"
	    android:src="@drawable/ic_exit" />

    <TextView
        android:id="@+id/txt_refresh_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_possible_connections"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/refresh_tag"
        android:textColor="#FFFFFF"
        android:textSize="30sp" 
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/img_refresh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/txt_refresh_tag"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_refresh"
        android:visibility="invisible" />
        
</RelativeLayout>